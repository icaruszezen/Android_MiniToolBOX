<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tool.ASCII.ToolASCII">

    <EditText
        android:id="@+id/text_ascii_input"
        android:layout_width="300dp"
        android:layout_height="165dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/textview_border"
        android:clickable="true"
        android:fadeScrollbars="false"
        android:hint="请输入字符串或ACSII码哦，ASCII码用英文逗号隔开"
        android:inputType="textMultiLine|text"
        android:scrollbars="vertical"
        android:textIsSelectable="true"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_ascii_output"
        android:layout_width="300dp"
        android:layout_height="165dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/textview_border"
        android:fadeScrollbars="false"
        android:gravity="center_vertical"
        android:scrollbars="vertical"
        android:text="你不输入才不会显示的哼！"
        android:textIsSelectable="true"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_ascii_input" />

    <Button
        android:id="@+id/btn_str_to_ascii"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:background="@drawable/btn_bg"
        android:text="字符变ASCII"
        app:layout_constraintBottom_toTopOf="@+id/text_ascii_output"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_ascii_input" />

    <Button
        android:id="@+id/btn_ascii_to_str"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="72dp"
        android:background="@drawable/btn_bg"
        android:text="ASCII变字符"
        app:layout_constraintBottom_toTopOf="@+id/text_ascii_output"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_ascii_input" />

    <Button
        android:id="@+id/btn_ascii_copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/btn_bg"
        android:text="复制"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_ascii_output" />



</android.support.constraint.ConstraintLayout>